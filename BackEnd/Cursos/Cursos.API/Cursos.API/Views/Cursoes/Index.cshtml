@model IEnumerable<Cursos.Domain.Model.Curso>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DuracaoCurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorCurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EhAtivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AtualizadoEm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeletadoEm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EhDeletado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DuracaoCurso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorCurso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EhAtivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AtualizadoEm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeletadoEm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EhDeletado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
